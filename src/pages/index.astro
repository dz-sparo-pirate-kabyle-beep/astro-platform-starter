    // --- FONCTIONS WALLET ---
    async function connectWallet() {
        if (window.solana && window.solana.isPhantom) {
            try {
                const resp = await window.solana.connect();
                document.getElementById('wallet-btn').innerText = resp.publicKey.toString().substring(0, 8) + "...";
                return resp.publicKey;
            } catch (err) { console.error("Connexion refusée"); }
        } else {
            alert("Phantom Wallet non détecté !");
            window.open("https://phantom.app/", "_blank");
        }
    }

    async function processPayment(priceEuro) {
        const provider = window.solana;
        if (!provider) return alert("Installez Phantom !");
        try {
            const resp = await provider.connect();
            const buyerPublicKey = resp.publicKey;
            const connection = new solanaWeb3.Connection(solanaWeb3.clusterApiUrl("mainnet-beta"), "confirmed");
            const solAmount = priceEuro / currentSolPriceEuro;
            const lamports = Math.floor(solAmount * solanaWeb3.LAMPORTS_PER_SOL);
            const transaction = new solanaWeb3.Transaction().add(
                solanaWeb3.SystemProgram.transfer({
                    fromPubkey: buyerPublicKey,
                    toPubkey: new solanaWeb3.PublicKey(DESTINATION_WALLET),
                    lamports: lamports,
                })
            );
            transaction.feePayer = buyerPublicKey;
            const { blockhash } = await connection.getLatestBlockhash();
            transaction.recentBlockhash = blockhash;
            const { signature } = await provider.signAndSendTransaction(transaction);
            alert("Succès ! Signature : " + signature.substring(0,12));
        } catch (err) { alert("Erreur ou annulation."); }
    }

    // --- FONCTIONS BOUTIQUE ---
    async function updateCrypto() {
        try {
            const r = await fetch('https://api.coingecko.com/api/v3/simple/price?ids=solana,bitcoin,tether&vs_currencies=eur&include_24hr_change=true');
            const d = await r.json();
            currentSolPriceEuro = d.solana.eur;
            document.getElementById('sol-price').innerText = currentSolPriceEuro.toFixed(2) + "€";
            setPct('sol-pct', d.solana.eur_24h_change);
            document.getElementById('btc-price').innerText = d.bitcoin.eur.toLocaleString() + "€";
            setPct('btc-pct', d.bitcoin.eur_24h_change);
            document.getElementById('usdt-price').innerText = d.tether.eur.toFixed(2) + "€";
            setPct('usdt-pct', d.tether.eur_24h_change);
            const reVal = RE_BASE * (currentSolPriceEuro / SOL_BASE);
            document.getElementById('re-price').innerText = reVal.toFixed(6) + "€";
            setPct('re-pct', d.solana.eur_24h_change);
        } catch(e) { console.log("Erreur API"); }
    }

    function setPct(id, val) {
        const el = document.getElementById(id);
        if(!el) return;
        el.innerText = (val >= 0 ? "+" : "") + val.toFixed(2) + "%";
        el.className = "pct " + (val >= 0 ? "up" : "down");
    }

    function render(list) {
        const grid = document.getElementById('main-grid');
        grid.innerHTML = "";
        list.forEach(item => {
            // Si pas d'image définie, on crée un placeholder avec le nom du produit
            const imgUrl = item.img && item.img !== "" 
                ? item.img 
                : `https://placehold.co/400x300/000000/b8860b?text=${encodeURIComponent(item.n)}`;
            
            grid.innerHTML += `
                <div class="card">
                    <img src="${imgUrl}" alt="${item.n}">
                    <div class="info">
                        <h3>${item.n}</h3>
                        <p>${item.d || ""}</p>
                    </div>
                    <div class="price-box">
                        <div class="p-euro">${item.p.toFixed(2)}€</div>
                        <div class="p-re">${Math.round(item.p * 10000)} $RE</div>
                    </div>
                    <button class="buy-btn" onclick="processPayment(${item.p})">ACHETER EN SOL</button>
                </div>`;
        });
    }

    function filterItems(cat, e) {
        document.querySelectorAll('.btn-cat').forEach(b => b.classList.remove('active'));
        if (e) e.currentTarget.classList.add('active');
        render(cat === 'TOUT' ? items : items.filter(i => i.c === cat));
    }

    // --- INITIALISATION NAVIGATION ---
    const categories = [...new Set(items.map(i => i.c))];
    const nav = document.getElementById('cat-nav');
    categories.forEach(c => {
        const b = document.createElement('button');
        b.className = 'btn-cat';
        b.innerText = c;
        b.onclick = (e) => filterItems(c, e);
        nav.appendChild(b);
    });

    // Lancement final
    updateCrypto();
    render(items);
    setInterval(updateCrypto, 20000);
